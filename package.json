{
  "name": "pokedex",
  "description": "A comprehensive Pokédex clone, providing detailed information on Pokémon species, abilities, and stats, with a user-friendly interface.",
  "author": "Sylvester Hofstra <hello@slvstr.dev>",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "format": "prettier --check \"**/*.{js,ts,tsx,md}\"",
    "format:fix": "prettier --write \"**/*.{js,ts,tsx,md}\"",
    "types": "tsc --noEmit",
    "types:watch": "tsc --noEmit --watch",
    "check": "pnpm types && pnpm lint && pnpm format",
    "upgrade": "pnpm upgrade --interactive",
    "upgrade:latest": "pnpm upgrade --interactive --latest"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.3.4",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-progress": "^1.0.3",
    "@vercel/analytics": "^1.1.3",
    "framer-motion": "^11.0.3",
    "next": "14.1.0",
    "react": "^18",
    "react-dom": "^18",
    "react-hook-form": "^7.50.1",
    "tailwind-variants": "^0.1.20",
    "zod": "^3.22.4",
    "zustand": "^4.5.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.17",
    "@types/react": "^18.2.55",
    "@types/react-dom": "^18.2.19",
    "autoprefixer": "^10.4.17",
    "clsx": "^2.1.0",
    "eslint": "^8.56.0",
    "eslint-config-next": "14.1.0",
    "eslint-plugin-unused-imports": "^3.0.0",
    "postcss": "^8.4.35",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.5.11",
    "tailwind-merge": "^2.2.1",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3"
  },
  "packageManager": "pnpm@8.15.1"
}
